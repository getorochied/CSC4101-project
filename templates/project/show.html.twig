{% extends 'base.html.twig' %}

{% block title %}{{ project.name }} - README{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="page-header">{{ project.name }}</h1>
                <div>
                    {% if project.portfolio %}
                        <a href="{{ path('app_portfolio_show', {'id': project.portfolio.id}) }}" class="btn btn-minet-outline me-2">
                            <i class="fas fa-folder me-1"></i>Voir Portfolio
                        </a>
                    {% endif %}
                    <a href="{{ path('app_project_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Retour aux Projets
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Détails du Projet</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="mb-3">Description</h6>
                            <p class="lead">{{ project.description }}</p>
                            
                            {% if project.startDate %}
                                <h6 class="mb-2 mt-4">Date de Début</h6>
                                <p><i class="fas fa-calendar me-2"></i>{{ project.startDate|date('d F Y') }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Statut du Projet</h5>
                        </div>
                        <div class="card-body text-center">
                            <span class="badge badge-minet-{{ project.status == 'completed' ? 'completed' : (project.status == 'active' ? 'active' : 'planned') }} fs-6 p-3">
                                <i class="fas fa-{{ project.status == 'completed' ? 'check-circle' : (project.status == 'active' ? 'play-circle' : 'clock') }} me-2"></i>
                                {% if project.status == 'completed' %}Terminé{% elseif project.status == 'active' %}Actif{% else %}Planifié{% endif %}
                            </span>
                        </div>
                    </div>

                    {% if project.portfolio %}
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Portfolio Associé</h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Portfolio #{{ project.portfolio.id }}</strong></p>
                                {% if project.portfolio.description %}
                                    <p class="text-muted small">{{ project.portfolio.description|length > 80 ? project.portfolio.description|slice(0, 80) ~ '...' : project.portfolio.description }}</p>
                                {% endif %}
                                <a href="{{ path('app_portfolio_show', {'id': project.portfolio.id}) }}" class="btn btn-sm btn-minet-primary">
                                    <i class="fas fa-folder-open me-1"></i>Voir Portfolio
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}