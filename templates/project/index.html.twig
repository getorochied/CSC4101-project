{% extends 'base.html.twig' %}

{% block title %}README - Projets{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="section-header">README - Projets MiNET</h1>
            
            {% if projects is empty %}
                <div class="stat-card text-center">
                    <i class="fas fa-info-circle fa-3x mb-3" style="color: var(--minet-primary);"></i>
                    <h5 style="color: white;">Aucun projet trouvé</h5>
                    <p style="color: rgba(255, 255, 255, 0.7);">C'est ici que les projets de l'association seront affichés.</p>
                </div>
            {% else %}
                <div class="row">
                    {% for project in projects %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="project-card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{ project.name }}</h5>
                                    <p class="card-text">{{ project.description|length > 120 ? project.description|slice(0, 120) ~ '...' : project.description }}</p>
                                    
                                    <div class="mb-3">
                                        <span class="badge badge-minet-{{ project.status == 'completed' ? 'completed' : (project.status == 'active' ? 'active' : 'planned') }} me-2">
                                            {% if project.status == 'completed' %}Terminé{% elseif project.status == 'active' %}Actif{% else %}Planifié{% endif %}
                                        </span>
                                        {% if project.startDate %}
                                            <small style="color: rgba(255, 255, 255, 0.7);">
                                                <i class="fas fa-calendar me-1"></i>{{ project.startDate|date('d/m/Y') }}
                                            </small>
                                        {% endif %}
                                    </div>
                                    
                                    {% if project.portfolio %}
                                        <p class="small mb-3" style="color: rgba(255, 255, 255, 0.7);">
                                            <i class="fas fa-folder me-1"></i>
                                            Portfolio #{{ project.portfolio.id }}
                                        </p>
                                    {% endif %}
                                </div>
                                <div class="card-footer">
                                    <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-minet-primary">
                                        <i class="fas fa-eye me-1"></i>Voir Détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
