{% extends 'base.html.twig' %}

{% block title %}README - Portfolios{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="section-header">Portfolios des Membres MiNET</h1>
            
            {% if portfolios is empty %}
                <div class="stat-card text-center">
                    <i class="fas fa-info-circle fa-3x mb-3" style="color: var(--minet-primary);"></i>
                    <h5 style="color: white;">Aucun portfolio trouvé</h5>
                    <p style="color: rgba(255, 255, 255, 0.7);">C'est ici que les portfolios des membres seront affichés.</p>
                </div>
            {% else %}
                <div class="row">
                    {% for portfolio in portfolios %}
                        <div class="col-md-6 mb-4">
                            <div class="project-card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">Portfolio #{{ portfolio.id }}</h5>
                                    {% if portfolio.description %}
                                        <p class="card-text">{{ portfolio.description }}</p>
                                    {% else %}
                                        <p class="card-text" style="color: rgba(255, 255, 255, 0.5);">Aucune description fournie</p>
                                    {% endif %}
                                    <p class="mb-3" style="color: rgba(255, 255, 255, 0.7);">
                                        <i class="fas fa-folder me-1"></i>
                                        {{ portfolio.projects|length }} projet{{ portfolio.projects|length > 1 ? 's' : '' }}
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <a href="{{ path('app_portfolio_show', {'id': portfolio.id}) }}" class="btn btn-minet-primary">
                                        <i class="fas fa-eye me-1"></i>Voir Détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
